@model Dominio.EntidadesVivero.TipoPlanta

@{
    ViewData["Title"] = "Busqueda - Tipo Nombre";
}

<h2>Búsqueda de Tipo de Plantas por su Nombre</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" id="formBusqNombre">
            <div class="form-group">
                <input type="text" id="nombreTP" name="nombreTP" class="form-control" />
            </div>
            <input type="submit" value="Buscar" />
        </form>
    </div>
</div>

@if (Model == null)
{

}
else
{
    <p>
        <a asp-action="Index">Mostrar Todos</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Descripción
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>           
                <tr>                    
                    <td>
                        @Html.DisplayFor(modelItem => Model.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id=Model.Id}) |
                 
                        @Html.ActionLink("Eliminar", "Delete", new { id = Model.Id})
                    </td>
                </tr>
        </tbody>
    </table>
}

<p id="pMensaje">@ViewBag.Error</p>
@section Scripts{
    <script>
        document.querySelector("#formBusqNombre").addEventListener('submit', evaluarBusqueda)

        function evaluarBusqueda(evento) {
            evento.preventDefault();
            let nombreTipoPlanta = document.querySelector("#nombreTP").value;

            if (nombreTipoPlanta != "") {

                this.submit();

            } else {
                document.querySelector("#pMensaje").innerHTML = "Complete el campo para poder realizar la búsqueda.";
            }

        }
    </script>
}